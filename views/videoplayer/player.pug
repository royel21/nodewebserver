
-let n = 0
#video-viewer.text-center.move-modal.resize
    .loading
        span.loading-title Cargando....
        .loader
    #video-player
        video#player(preload="metadata" src="" controls=false)
    .text-center.v-controls.footer
        #slider-container
        #v-control-2
            span#hide-player
                i.far.fa-times-circle.popup-msg(data-title="Cerrar")
            span#v-prev
                i.far.fa-arrow-alt-circle-left.popup-msg(data-title="Anterior")
            </span>
            span#v-play-pause
                label(for="v-play")
                    input#v-play(type="checkbox")
                    i.far.fa-play-circle.popup-msg(data-title="Pausar")
            span#v-next
                i.far.fa-arrow-alt-circle-right.popup-msg(data-title="Proximo")
            //- span#v-player-config.tool-config
            //-     i.fas.fa-cog.popup-msg(data-title="Configuracion")
            span.btn-fullscr
                i.fas.fa-expand-arrows-alt.popup-msg(data-title="Pantalla Completa")
            span.v-vol
                input#v-vol-control.range.popup-msg(data-title="Volumen" type="range"
                    min="0" step="0.01" value="0.5" max="1")
                label(for="v-mute")
                    input#v-mute.vol-ctrl(type="checkbox")
                    span.mute-icon
                    i.fas.fa-volume-up.popup-msg(data-title="Silenciar")
        #mobile-control.move
            span#v-total-time 00:00/00:00