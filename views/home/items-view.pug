mixin items-view(items, pagedatas, isFile)
    #container    
        #controls
            if pagedatas.action.includes('content')    
                span#back
                    i.far.fa-arrow-alt-circle-left
            include ../share/search
            +search(pagedatas, pagedatas.action+"search", "search-form")

            include ../share/pagination
            +pagination(items.count, pagedatas)
                
        .items-list(id=(isFile ? "files-list" : "folders-list"))
            each item in items.rows
                .items(tabindex="0" id=item.Id, data-duration=item.Duration data-type=(isFile ? item.Type : ""))
                    .item-video
                        .item-btns
                            if item.DirectoryId
                                span.item-del.far.fa-play-circle
                                span.item-fav.far.fa-star
                            if !item.DirectoryId
                                span.item-fav.far.fa-star
                        .item-cover
                            img.fa(draggable="false" src="/covers/"+ (isFile ? 'files/folder-'+item.DirectoryId+'/' : 'folders/')+item.Id+'.jpg' alt="Loading Image - Reload")
                        .item-name= item.Name.replace(/.mp4|.mkv|.avi|webm|ogg/ig, '')
        