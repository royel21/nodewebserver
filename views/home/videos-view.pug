mixin videos-view(video, pagedatas)
    #container    
        #controls
            include ../share/search
            +search(pagedatas, pagedatas.action+"search", "search-form")

            include ../share/pagination
            +pagination(video.count, pagedatas)
                
        #videos-list.items-list
            each item in video.rows
                .items(tabindex="0" id=item.Id)
                    .item-video
                        .item-btns
                            span.item-del.far.fa-play-circle
                            span.item-fav.far.fa-star
                        .item-cover
                            img.fa(draggable="false" src=item.CoverPath alt="La imagen se esta cargando actulalize")
                        .item-name= item.Name