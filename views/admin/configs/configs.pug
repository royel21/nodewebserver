mixin configs(directories, pagedatas)
    #container.text-light.bg-dark.rounded.mx-
        .text-center.text-light
            h2 Directorios Agregados
            //- label.float-right(for="auto-scan") Auto Escanear Directorios
            //-     input#auto-scan(type="checkbox" name="autoScan")
        ul#paths.list-group.text-dark.font-weight-bold(data-csrf=pagedatas.csrfToken)
            li.list-group-item No hay Directorios Agregados
            each d in directories
                li.list-group-item(id=d.Id)
                    span
                        i(class="text-primary fas fa-sync "+(d.IsLoading ? "fa-spin" : ""))
                    span.delete-path
                        i.ml-2.text-danger.fas.fa-trash-alt
                    span.ml-2= d.FullPath
        #tree-container
            .card.text-dark
                .text-center.text-light
                #disks
                    h2 Espere Por favor.
                        