mixin users_table(users, pagesdata, action, csrfToken)
    #table-container.text-light.bg-dark.rounded.mx-2(data-action="/admin/user-modal")
        #table-controls
            span.show-form
                i.fa.fa-user-plus.text-primary
            form#search-form.d-inline-block.ml-2(action="/admin/users/search" method="POST") 
                input(type="hidden" name="_csrf" value=""+ csrfToken)
                input(type="hidden" name="page" value=""+ pagesdata.currentPage)
                input(type="hidden" name="items" value=""+ pagesdata.itemsPerPage)
                .input-group.mb-3
                    .input-group-prepend
                        button#btn-search.input-group-text(type="submit")
                            i.fa.fa-search
                    input#search-input.form-control(type="text" name="search" value=pagesdata.search placeholder="Enter Search" required)
                    span#clear-search
                        i.fas.fa-times-circle
            
            include ../share/pagination
            +pagination(users.count, pagesdata, action, csrfToken)
        
        table.table.table-dark.user-table.table-hover
            thead
                tr
                    th Acciones
                    th Id Usuario
                    th Rol
                    th Estado
                    th Agregado En
            tbody
                each user in users.rows
                    tr(id=""+ user.Id)
                        td
                            span.show-form
                                i.fas.fa-edit.fa-2x
                            span.show-delete(data-action="/admin/user-delete")
                                i.ml-2.text-danger.fas.fa-trash-alt.fa-2x
                        td= user.Name
                        td= roles[user.Role]
                        td= user.State
                        td= moment(user.CreatedAt).format("LLL")