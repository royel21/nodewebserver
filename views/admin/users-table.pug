mixin users_table(users)
    #table-container.text-light.bg-dark.rounded.text-center.mx-2(data-action="/admin/user-modal")
        #table-controls
            span.show-form
                i.fa.fa-user-plus.text-primary
            form.d-inline-block.ml-2(action="/users/search" method="POST")    
                .input-group.mb-3
                    .input-group-prepend
                        label#btn-search.input-group-text(for="searchtext") Search
                    input#search-input.form-control(required="" type="text" name="searchtext" value="" placeholder="Enter Search")
            
            span.badge.badge-primary #{users.count}
        
        table.table.table-dark.user-table.table-hover
            thead
                tr
                    th Editar	
                    th Id Usuario
                    th Rol
                    th Estado
                    th Agregado En
                    th Remover
            tbody
                each user in users.rows
                    tr(id=""+ user.Id)
                        td.text-primary
                            span.show-form
                                i.fas.fa-edit.fa-2x
                        td= user.Name
                        td= roles[user.Role]
                        td= user.State
                        td= moment(user.CreatedAt).format("LLL")
                        td.text-danger.text-center
                            i.fas.fa-trash-alt.fa-2x