#modal-container
    #modal.card.bg-dark.text-light
        #modal-header.text-center
            h3= modalTitle
        form#create-edit(method="post" action="/admin/create-user")
            input(type="hidden" name="Id" value=""+ (user.id ? user.id :  ""))
            input(type="hidden" name="_csrf" value=""+ csrfToken)
            .mt-4.d-flex.flex-column.justify-content-end
            .input-group.my-3
                .input-group-prepend
                    label.input-group-text(for="username") ID Usuario
                input#firstname.form-control(required="" type="text" name="username" value=""+ (user.username ? user.username : ""))
            .input-group.my-3
                .input-group-prepend
                    label.input-group-text(for="password" value="") Clave 
                input#password.form-control(type="password" name="password" value="" autocomplete="new-password")
            .input-group.my-3
                .input-group-prepend
                    label.input-group-text(for="role" value="") role 
                select#role.form-control(name="role")
                    each role, key in roles 
                        option(value=key)= role
            .text-center.my-3
                button.btn.btn-secondary.close-modal(type="button") Cancelar
                button.btn.btn-primary.ml-2(type="submit") Guardar
        