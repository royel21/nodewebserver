#modal-container
    #modal.card.bg-dark.text-light
        #modal-header.text-center
            h3= modalTitle
        form#create-edit(method="post" action="/admin/create-edit-user")
            input(type="hidden" name="id" value=""+ (user.Id || ""))
            input(type="hidden" name="_csrf" value=""+ csrfToken)
            #errors.text-danger.text-center
            .input-group.my-3
                .input-group-prepend
                    label.input-group-text(for="username") ID Usuario
                input#username.form-control(required="" type="text" name="username" value=""+ (user.Name || ""))
            .input-group.my-3
                .input-group-prepend
                    label.input-group-text(for="password" value="") Clave 
                input#password.form-control(type="password" name="password" value="" autocomplete="new-password")
            .input-group.my-3
                .input-group-prepend
                    label.input-group-text(for="state" value="") Estado
                select#state.form-control(name="state")
                    option(value=key selected=(user.State === "Activo" ? true : false)) Activo
                    option(value=key selected=(user.State === "Inactivo" ? true : false)) Inactivo
            .input-group.my-3
                .input-group-prepend
                    label.input-group-text(for="role" value="") role 
                select#role.form-control(name="role")
                    each role, key in roles 
                        option(value=key selected=(user.Role == key ? true : false))= role
            .text-center.my-3
                button.btn.btn-secondary.close-modal(type="button") Cancelar
                button.btn.btn-primary.ml-2(type="submit") Guardar
        