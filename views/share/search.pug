mixin search(data, action, formId)
    if url.includes('folder-content')
        span#goback.fas.fa-arrow-up
    .search-container
        form.d-inline-block.ml-2(id=formId action=action method="POST") 
            input(type="hidden" name="_csrf" value=""+ data.csrfToken)
            input(type="hidden" name="page" value=""+ data.currentPage)
            input(type="hidden" name="items" value=""+ data.itemsPerPage)
            input(type="hidden" name="orderby" value=""+ data.orderby)
            if data.cat
                input(type="hidden" name="cat" value=data.cat)
            .input-group
                .input-group-prepend
                    button.btn-search.input-group-text(type="submit")
                        i.fa.fa-search
                input.search-input.form-control(type="text" name="search" value=data.search placeholder="Search" required)
                span.clear-search
                    i.fas.fa-times-circle