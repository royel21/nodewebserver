form#create-edit(method="post" action="/admin/create-user")
    input(type="hidden" name="Id" value=""+ (user.Id ? user.Id :  ""))
    input(type="hidden" name="_csrf" value=""+ csrfToken)
    .mt-4.d-flex.flex-column.justify-content-end
        div.input-group.mb-3
            .input-group-prepend
                label.input-group-text(for="UserId") ID Usuario
            input#uid.form-control(required="" name="UserId" value=""+ (user.UserId ? user.UserId :  ""))
        .input-group.mb-3
            .input-group-prepend
                label.input-group-text(for="UserName") Nombres
            input#firstname.form-control(required="" type="text" name="UserName" value=""+ (user.UserName ? user.UserName : ""))
        .input-group.mb-3
            .input-group-prepend
                label.input-group-text(for="LastName") Apellidos
            input#lastname.form-control(required="" type="text" name="LastName" value=""+ (user.LastName ? user.LastName : ""))
        
        .input-group.mt-2
            .input-group-prepend
                label.input-group-text(for="password" value="") Clave 
            input#password.form-control(type="password" name="Password" value="")

    .text-center.mt-2
        button.btn.btn-secondary.close-modal(type="button") Cancelar
        button.btn.btn-primary.ml-2(type="submit") Guardar